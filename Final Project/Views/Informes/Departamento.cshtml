@model  List<CapaEntidad.Departamento>


    @{
        ViewBag.Title = "Listado de Los Departamentos";
        Layout = "~/Views/Shared/_Layout.cshtml";
    }

    <h1></h1>



    <table class="table table-dark">
        <thead>
            <tr>
                <th>Departamento_id</th>
                <th>Codigo_Del_Departamento</th>
                <th> Nombre_Del_Departamento </th>
               

            </tr>
        </thead>


        <tbody>
            @foreach (var i in Model)
            {
                <tr>
                    <td>@i.Departamento_id</td>
                    <td>@i.Codigo_Del_Departamento</td>
                    <td>@i.Nombre_Del_Departamento</td>
                </tr>
            }


        </tbody>
    </table>
