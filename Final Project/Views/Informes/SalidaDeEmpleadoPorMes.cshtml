@model IEnumerable<Final_Project.Models.SalidaDeEmpleado>


@{
    ViewBag.Title = "Empleados Activos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



@using (Html.BeginForm())
{
    @Html.TextBox("mes");
    <input type="submit" value="Buscar" class="btn btn-success right">
}


<table class="table table-dark">
    <tr>

       <th>
           Id
       </th>

        <th>
            Nombre del Empleado
        </th>
        <th>
            Tipo de Salido
        </th>
        <th>
            Motivo
        </th>
        <th>
            Fecha de Salida
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>

            <td>
                @Html.DisplayFor(modelItem => item.ID)
            </td>


            <td>
                @Html.DisplayFor(modelItem => item.Nombre_Emplado)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Tipo_Salida)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Motivo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Fecha_Salida)
            </td>

        </tr>
    }

</table>
